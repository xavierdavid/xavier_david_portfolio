{# templates/skill/base_skill.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mes compétences{% endblock %}

{% block body %}

<div class="container">

    <div class="jumbotron">
        <h1>Mes compétences</h1>
    </div>
    
    <div class="row">
        <div id="admin_menu" class="col-md-3">
            
            <h3>Compétences</h3>
            <div class="list-group">
                <a href="{{ path('skill') }}" class="list-group-item list-group-item-action">Toutes mes compétences</a> {# la fonction path() permet de retrouver l'url en fonction du nom d'une route #} 
                <a href="{{ path('skill_create') }}" class="list-group-item list-group-item-action">Ajouter une compétence</a> 
            </div> 
            </br>
            <hr>
            <h4>Compétences à la une</h4> 

            {# Inclusion d'un template d'index d'expérience avec les 3 dernières compétences #}
            {# Insertion de la méthode lastSkills du contrôleur SkillController pour inclure le template index_skills.html.twig avec les 3 dernières compétences publiées #}
            {# Inclusion du contrôleur, des données et de la vue '#}
            {{render(controller('App\\Controller\\SkillController::lastSkills', {'limit': 3}))}}
            <br>
            <hr>
            <a href="{{ path('admin_dashboard')}}" class="btn btn-info">Accueil tableau de bord</a>         </div>
        
        <div id="content" class="col-md-9">
            {% block skill_body %}{% endblock %} 
        </div>

    </div>
</div>
{% endblock %}   