{# templates/education/base_education.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mes formations{% endblock %}

{% block body %}

<div class="container">

    <div class="jumbotron">
        <h1>Mes formations</h1>
    </div>
    
    <div class="row">
        <div id="admin_menu" class="col-md-3">
            
            <h3>Formations</h3>
            <div class="list-group">
                <a href="{{ path('education') }}" class="list-group-item list-group-item-action">Toutes mes formations</a> {# la fonction path() permet de retrouver l'url en fonction du nom d'une route #} 
                <a href="{{ path('education_create') }}" class="list-group-item list-group-item-action">Ajouter une formation</a> 
            </div> 
            </br>
            <hr>
            <h4>Formations à la une</h4> 

            {# Inclusion d'un template d'index de formations avec les 3 dernières formations #}
            {# Insertion de la méthode lastEducations du contrôleur EducationController pour inclure le template index_educations.html.twig avec les 3 dernières formations publiées #}
            {# Inclusion du contrôleur, des données et de la vue '#}
            {{render(controller('App\\Controller\\EducationController::lastEducations', {'limit': 3}))}}
            <br>
            <hr>
            <a href="{{ path('admin_dashboard')}}" class="btn btn-info">Accueil tableau de bord</a>         </div>
        
        <div id="content" class="col-md-9">
            {% block education_body %}{% endblock %} 
        </div>

    </div>
</div>
{% endblock %}   